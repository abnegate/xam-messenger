<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Messenger2.Views.LoginView"
             xmlns:viewModels="clr-namespace=Messenger2.ViewModels;assembly=Messenger2"
             viewModels:ViewModelLocator.AutoWireViewModel="true">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="" />
            <Label Text="Subtitle" />
            <Entry x:Name="EmailEntry" Placeholder="Username or email" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" />
            <Button Text="Login" Command="{Binding LoginCommand}" />
            <Button Text="Login with Facebook" />
            <Button Text="Create Account" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>